@model List<Category>
@{
    ViewData["title"] = "Category";
}

@if(TempData["message"] != null )
{
    <script>
        alert('@TempData["message"]')
    </script>
}

<div class="w-100 d-flex justify-content-between align-items-center">
    <h1>Categories</h1>
    <a class="btn btn-primary" asp-controller="Category" asp-action="Create">Create</a>
</div>
<table class="my-2 mx-auto w-50 table table-bordered table-striped">
    <thead>
        <th>Id</th>
        <th>Category Name</th>
        <th>Display Order</th>
        <th>Created Date</th>
        <th>Updated Date</th>
        <th>Actions</th>
    </thead>
    <tbody>
        @{
            int index = 0;
        }
        @if( Model.Count == 0 || Model == null)
        {
            <tr class="text-center">
                <td colspan="6">
                    Nothing category to show!
                </td>
            </tr>
        }
        @foreach (var obj in Model!)
        {
            <tr>
                <td>
                    @(++index)
                </td>
                <td>
                    @obj.Name
                </td>
                <td>
                    @obj.DisplayOrder
                </td>
                <td>
                    @obj.CreatedDateTime
                </td>
                <td>
                    @obj.UpdatedDateTime
                </td>
                <td class="d-flex gap-2 align-items-center">
                    <a asp-controller="Category" asp-action="DeleteCategory" asp-route-id="@obj.Id" class="btn btn-sm btn-danger">Delete</a>
                    <a asp-controller="Category" asp-action="Update" asp-route-categoryId="@obj.Id" class="btn btn-sm btn-warning">
                        Update
                        </a>
                </td>
            </tr>
        }
    </tbody>
</table>