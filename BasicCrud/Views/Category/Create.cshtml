@model Category

@{
    ViewData["Title"] = "Create Category";
}

<div class="container mx-auto card p-3 w-50 ">
    <h3 class="h3">Create Category</h3>
    
    <form method="post" asp-action="Create" >
        <div class="form-group my-2">
            <label class="form-label" asp-for="Name"></label>
            <input type="text" asp-for="Name" placeholder="Enter categor name : " class="form-control"/>
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>
        <div class="form-group my-2">
            <label class="form-label" asp-for="DisplayOrder"></label>
            <input type="number" asp-for="DisplayOrder" placeholder="Enter display order : " class="form-control" />
            <span class="text-danger" asp-validation-for="DisplayOrder"></span>
        </div>
        <div class="d-flex justify-content-between align-items-center gap-2">
            <button asp-controller="Category" asp-action="Index" class="btn btn-sm btn-warning">Go Back</button>
            <button type="submit" class="btn btn-sm btn-primary">Create</button>
        </div>
    </form>

</div>